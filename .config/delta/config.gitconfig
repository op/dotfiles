[include]
  path = ~/.config/delta/themes.gitconfig

[include]
  # include file generated by darkmode, which includes the theme in modes/.
  path = ~/.cache/delta/darkmode.gitconfig

[delta]
  # hyperlinks = true
  # line-numbers = true
  navigate = true  # use n and N to move between commits
  navigate-regex = ^commit [0-9a-f\\]+

#[interactive]
#  diffFilter = delta --color-only

[delta "no-line-numbers"]
	line-numbers = false

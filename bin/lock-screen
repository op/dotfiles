#!/bin/bash

base=191724
text=e0def4
love=eb6f92
gold=f6c177
rose=ebbcba
pine=31748f
foam=9ccfd8
iris=c4a7e7
hi_med=403d52
surface=1f1d2e

# Locks the screen immediately
swaylock \
    --hide-keyboard-layout \
    \
    --color $base \
    --indicator-radius 35 \
    --indicator-idle-visible \
    --indicator-thickness 30 \
    \
    --bs-hl-color $love \
    --key-hl-color $base \
    --separator-color $base \
    \
    --layout-border-color $base \
    --layout-bg-color $surface \
    \
    --inside-color $foam \
    --line-color $base \
    --ring-color $iris \
    --text-color $text \
    \
    --inside-caps-lock-color $base \
    --text-caps-lock-color $text \
    --line-caps-lock-color $base \
    --ring-caps-lock-color $love \
    \
    --inside-clear-color $foam \
    --text-clear-color $foam \
    --line-clear-color $base \
    --ring-clear-color $rose \
    \
    --inside-ver-color $pine \
    --text-ver-color $pine \
    --line-ver-color $base \
    --ring-ver-color $gold \
    \
    --inside-wrong-color $rose \
    --text-wrong-color $rose \
    --line-wrong-color $base \
    --ring-wrong-color $love
